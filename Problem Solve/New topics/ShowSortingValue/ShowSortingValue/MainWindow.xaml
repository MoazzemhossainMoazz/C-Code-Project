<Window x:Class="ShowSortingValue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowSortingValue"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Margin="20">

        <Label Content="Enter Some values:" 
               FontWeight="Bold" 
               FontSize="14" 
               Margin="0,0,0,0"/>
        <TextBox x:Name="tbInput" 
                 Width="335" 
                 Height="30" 
                 HorizontalAlignment="Left"
                 Margin="0,0,0,10"/>

        
        <Button Content="Add" 
                Width="100" 
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Click="btnAddClick"/>

        <Label Content="Clcik a button which do you want:" 
        FontWeight="Bold" 
        FontSize="14" 
        Margin="0,20,0,0"/>
        <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 0">
            <Button VerticalAlignment="Bottom" Width="100">Ascending</Button>
            <Button VerticalAlignment="Bottom" Width="100" Margin="10, 0, 0, 0">Descending</Button>
        </StackPanel>

        <TextBlock x:Name="tBshowOutPut" 
            Width="336" 
            Height="30"
            HorizontalAlignment="Left"
            Margin="0,10,0,10" />
    </StackPanel>
    
    

    <!--<StackPanel Margin="10">
        <TextBox Height="300" Width="50" />
    </StackPanel>-->
</Window>
