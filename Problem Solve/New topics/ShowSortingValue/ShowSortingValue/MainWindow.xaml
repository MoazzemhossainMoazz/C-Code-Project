<Window x:Class="ShowSortingValue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowSortingValue"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Margin="20">

        <Label 
            x:Name="lbl01"
            Content="Enter Some values:" 
               FontWeight="Bold" 
               FontSize="20" 
               Height="40" 
               Margin="0,0,0,0"/>
        
        <TextBox x:Name="yufgu" 
                 FontSize="20"
                 Background="LightBlue"
                 Width="380" 
                 Height="30" 
                 HorizontalAlignment="Left"
                 Margin="0,0,0,10" TextChanged="yufgu_TextChanged"/>

        
        <Button x:Name="btnAdd"
                Content="Add" 
                Width="100" 
                Background="LightGreen"
                Height="35"
                FontSize="15"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"
                Click="btnAddClick"/>

        <TextBox x:Name="tbInput12"
         FontSize="20"
         Background="LightBlue"
         Width="380" 
         Height="30" 
         HorizontalAlignment="Left"
         Margin="0,0,0,10"/>

        <Label Content="Clcik a button which result do you want:" 
        FontSize="20" 
        Height="40"
        FontWeight="Bold" 
        
        Margin="0,20,0,0"/>
        <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 0">
            <Button 
                VerticalAlignment="Bottom" 
                Width="100" Height="30" 
                FontSize="15" 
                Background="LightSalmon"
                Click="AscnBtn">Ascending</Button>
            <Button 
                VerticalAlignment="Bottom" 
                Width="100" Height="30"
                Margin="10, 0, 0, 0" 
                FontSize="15" 
                Background="LightSalmon"
                Click="DescBtn">Descending</Button>
        </StackPanel>

        <TextBlock x:Name="tBshowOutPut" 
            FontSize="20"
            Background="Yellow"
            Width="380" 
            Height="30"
            HorizontalAlignment="Left"
            Margin="0,10,0,10" />
    </StackPanel>
    
    

    <!--<StackPanel Margin="10">
        <TextBox Height="300" Width="50" />
    </StackPanel>-->
</Window>
